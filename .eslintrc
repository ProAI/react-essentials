{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "no-unused-vars": "warn",
    "linebreak-style": "off",
    "react/forbid-prop-types": "off",
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "jsx-a11y/label-has-for": [
      "error",
      {
        "components": ["label"],
        "required": {
          "every": [ "id" ]
        }
      }
    ]
  }
}
